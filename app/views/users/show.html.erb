<% provide(:title, @user.name) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %> 
			</h1>
		</section>
	</aside>
	<div class="col-md-8">
		<% if @user.jobsearches.any? %>
			<h3>Jobsearches (<%= @user.jobsearches.count %>)</h3>
			<ol class="jobsearches">
				<%= render @jobsearches %>
			</ol>
			<%= will_paginate @jobsearches %>
		<% end %>
	</div>
</div>