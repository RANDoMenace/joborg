<% provide(:title, "Home") %> 
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="jobsearch_form">
        <%= render 'shared/jobsearch_form' %>
      </section>
    </aside>
  </div>
<% else %>
<div class="center jumbotron"
	<h1>Job Organizer</h1>
	<p>
	  Take the slow and steady approach to finding your dream job.
	</p>
	<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>

